<p id="notice"><%= notice %></p>

<h1>Statements</h1>

<table>
  <thead>
    <tr>
      <th>New Bill</th>
      <th>Produced</th>
    </tr>
  </thead>

  <tbody>
    <% @statements.each do |statement| %>
      <tr>
        <td><%= statement.generated.to_date %></td>
        <td><%= link_to 'Show', statement %></td>
      </tr>
    <% end %>
  </tbody>
</table>

